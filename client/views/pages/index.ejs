<!DOCTYPE html>
<html lang="en">
	<head>
		<% include ../partials/head %>
	</head>
	<body class="container-fluid">
		<div id="fb-root"></div>
		<% include ../partials/facebook-integration %>
		<section id="header" class="row bg-primary">
			<div class="col-xs-4 col-sm-2">
				<% include ../partials/fb-like %>
			</div>
			<div class="col-xs-8 col-sm-7">
				<div class="row">
					<div class="col-xs-12 text-center">
						<h4>PNG Weather Reports &middot; <span class="small text-muted">by Sudo Tech</span></h4>
					</div>
				</div>
			</div>
			<div class="col-xs-12 col-sm-3">
				<form class="form-horizontal navbar-form nav navbar-nav navbar-right form-group" action="/api/weather/">
					<div class="col-xs-9">
						<input class="form-control text-center text-info bg-success" type="text" name="city" placeholder="Pick a city or start typing to filter cities" id="seach_city" autocomplete="true" list="cities">
					</div>
					<datalist id="cities">
						<a href="/api/weather/?city=Port Moresby"><option value="Port Moresby"></a>
						<option value="Lae">
						<option value="Arawa">
						<option value="Mount Hagen">
						<option value="Madang">
						<option value="Wewak">
						<option value="Goroka">
						<option value="Kokopo">
						<option value="Popondetta">
						<option value="Aitape">
						<option value="Rabaul">
						<option value="Kimbe">
						<option value="Tabubil">
						<option value="Daru">
						<option value="Kavieng">
						<option value="Alotau">
						<option value="Vanimo">
						<option value="Bulolo">
						<option value="Kiunga">
						<option value="Kundiawa">
						<option value="Mendi">
						<option value="Kainantu">
						<option value="Lorengau">
						<option value="Ialibu">
						<option value="Kerema">
						<option value="Ningerum">
						<option value="Wau">
						<option value="Wabag">
						<option value="Rabaul">
					</datalist>
					<button class="btn btn-success-outline" type="submit"><i class="glyphicon glyphicon-search"></i></button>
				</form>
			</div>
		</section>
		<section id="main" class="row">
			<div class="col-xs-6">
				<span id="fb-welcome"></span>
			</div>
			<section class="container-fluid bg-info">
				<div class="row">
					<div class="col-xs-12 col-sm-9" >
						<div id="map" style="height: 500px; width: 100%;"></div>
					</div>
					<div class="col-xs-12 col-sm-3">
						<div class="col-xs-12 well">
							<h3><a href="/api/weather/?city=Port Moresby">Port Moresby</a></h3>
						</div>
						<div class="col-xs-12 well">
							<h3><a href="/api/weather/?city=Lae">Lae</a></h3>
						</div>
						<div class="col-xs-12 well">
							<h3><a href="/api/weather/?city=Mount Hagen">Mt. Hagen</a></h3>
						</div>
						<div class="col-xs-12 well">
							<h3><a href="/api/weather/?city=Rabaul">Rabaul</a></h3>
						</div>
					</div>
						<!-- <iframe src="https://docs.google.com/forms/d/e/1FAIpQLSfFTIqNgLLGRCGqCwLlnxzlZb3FX51ccyQot87xdBc1KqcE1w/viewform?embedded=true" width="100%" height="860" frameborder="0" marginheight="0" marginwidth="0">Loading...</iframe> -->
				</div>
			</section>
		</section>
		<% include ../partials/footer %>
	</body>
	<% include ../partials/scripts %>
	<!-- <script src="/scripts/saveSvgAsPng.js"></script> -->
</html>